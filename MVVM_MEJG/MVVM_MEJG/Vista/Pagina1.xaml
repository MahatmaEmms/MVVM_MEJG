<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_MEJG.Vista.Pagina1">
    <Grid BackgroundColor="AntiqueWhite">
        <StackLayout VerticalOptions="Center">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Numero 1" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry PlaceholderColor="White" Placeholder="Deme un numero" HorizontalOptions="StartAndExpand" 
                   Text="{Binding N1}" Keyboard="Numeric"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Numero 2" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry PlaceholderColor="White" Placeholder="Deme un numero" HorizontalOptions="StartAndExpand" 
                   Text="{Binding N2}" Keyboard="Numeric"/>
            </StackLayout>
            <Button Text="Sumar" VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding sumarcommand}"
                TextTransform="None" BackgroundColor="White" FontAttributes="Bold" CornerRadius="5" TextColor="Black"/>
            <Label Text="{Binding R}" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" FontSize="35"/>
        </StackLayout>
    </Grid>
</ContentPage>